<?xml version="1.0"?>
<ruleset name="CustomSMBShares">
    <description>PSR-12 coding standard for Custom SMB Shares plugin</description>
    
    <!-- Use PSR-12 standard -->
    <rule ref="PSR12"/>
    
    <!-- Paths to check -->
    <file>source/</file>
    
    <!-- Exclude patterns -->
    <exclude-pattern>*/vendor/*</exclude-pattern>
    <exclude-pattern>*/tests/*</exclude-pattern>
    <exclude-pattern>*/node_modules/*</exclude-pattern>
    
    <!-- Show progress -->
    <arg value="p"/>
    
    <!-- Use colors -->
    <arg name="colors"/>
    
    <!-- Show sniff codes -->
    <arg value="s"/>
</ruleset>
